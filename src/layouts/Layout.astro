---

// css
import '../scss/main.scss'

// props
const { title, description, page_class } = Astro.props;

// global
const global = {
	author: 'Senz Design',
	site_url: 'https://www.senzdsn.com'
}

---

<!doctype html>

<html lang='en-US'>
	
	<head>
		<meta http-equiv='Content-Type' content='text/html; charset=utf-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no'>
		<meta name='format-detection' content='telephone=no'>
		
		<meta name='author' content={global.author}>
		<meta name='generator' content={Astro.generator} />
		
		<link rel='shortcut icon' href='img/favicon.png'>

		<title>{title}</title>
		<meta name='description' content={description}/>
		<link rel='canonical' href={global.site_url} />

		<!-- facebook -->
		<meta property='og:locale' content='en_US' />
		<meta property='og:type' content='website' />
		<meta property='og:title' content={title} />
		<meta property='og:description' content={description}/>
		<meta property='og:url' content={global.site_url} />
		<meta property='og:site_name' content={title} />
		<meta property='og:image' content={global.site_url + '/img/og-image.png'} />
		<meta property='og:image:secure_url' content={global.site_url + '/img/og-image.png'} />
		<meta property='og:image:width' content='1200' />
		<meta property='og:image:height' content='630' />

		<!-- google fonts -->
		<link rel='preconnect' href='https://fonts.googleapis.com'>
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin>
		<link href='https://fonts.googleapis.com/css2?family=Public+Sans&display=swap' rel='stylesheet'>

		<!-- css -->
		<link rel='stylesheet' href='css/normalize.min.css' />
		<link rel='stylesheet' href='css/bootstrap-grid.min.css' />

	</head>

	<body>

		<main id='main-content' class={page_class}>
			<slot />
		</main>

	</body>

</html>